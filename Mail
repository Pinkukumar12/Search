    <!-- Splash Screen -->
    <div id="splash-screen" class="fixed inset-0 z-50 flex flex-col items-center justify-center bg-gray-50 dark:bg-gray-900 transition-opacity duration-500">
        <div class="text-center">
            <h1 class="text-4xl font-bold bg-gradient-to-r from-blue-500 to-purple-600 dark:from-blue-400 dark:to-purple-500 text-transparent bg-clip-text">Mail Generator</h1>
            <p class="text-gray-500 dark:text-gray-400 mt-2">No Login, No Signup, Just Privacy.</p>
        </div>
        <div class="w-48 h-1.5 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden mt-8">
            <div id="loading-bar" class="h-full bg-gradient-to-r from-blue-500 to-purple-600 animate-fill-bar"></div>
        </div>
    </div>

    <!-- Main App Container -->
    <div id="app-container" class="max-w-md mx-auto h-screen flex flex-col opacity-0 transition-opacity duration-500">
        
        <!-- Home Screen -->
        <div id="home-screen" class="flex flex-col h-full">
            <header class="flex items-center justify-between p-4 border-b border-gray-200 dark:border-gray-700 sticky top-0 bg-gray-50/80 dark:bg-gray-900/80 backdrop-blur-sm">
                <div class="w-10"></div> <!-- Spacer -->
                <h1 class="text-xl font-bold text-center">Mail Generator</h1>
                <button id="theme-toggle-btn" class="p-2 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                    <span id="theme-icon" class="material-symbols-outlined">light_mode</span>
                </button>
            </header>

            <main class="p-4 space-y-4 flex-grow overflow-y-auto no-scrollbar">
                <!-- Action Buttons -->
                <div class="grid grid-cols-2 gap-3">
                    <button id="change-mail-btn" class="flex items-center justify-center gap-2 w-full btn-primary text-white font-semibold py-2.5 px-4 rounded-lg shadow-md transition-all duration-300">
                        <span class="material-symbols-outlined">change_circle</span>
                        <span>Change Mail</span>
                    </button>
                    <button id="delete-mail-btn" class="flex items-center justify-center gap-2 w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-2.5 px-4 rounded-lg shadow-md transition-all duration-300 transform hover:scale-105">
                        <span class="material-symbols-outlined">delete</span>
                        <span>Delete Mail</span>
                    </button>
                </div>

                <!-- Email Display Card -->
                <div class="bg-white dark:bg-gray-800 p-4 rounded-xl shadow-lg">
                    <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Your temporary email address</p>
                    <div class="flex items-center justify-between gap-2">
                        <span id="email-address" class="font-mono text-lg truncate font-bold">loading...</span>
                        <button id="copy-btn" class="flex-shrink-0 p-2 rounded-full bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors">
                            <span class="material-symbols-outlined text-xl">content_copy</span>
                        </button>
                    </div>
                </div>
                
                <!-- Timer Card -->
                <div class="bg-white dark:bg-gray-800 p-4 rounded-xl shadow-lg flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Email lifetime</p>
                        <p id="timer-display" class="text-2xl font-bold">10:00</p>
                    </div>
                    <button id="extend-timer-btn" class="bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition-transform transform hover:scale-105">
                        Extend
                    </button>
                </div>

                <!-- Inbox Section -->
                <div>
                    <div class="flex items-center justify-between mb-2">
                        <h2 class="text-lg font-semibold">Inbox</h2>
                        <div class="flex items-center gap-2">
                            <span id="email-count" class="text-sm text-gray-500 dark:text-gray-400">0 emails</span>
                            <button id="refresh-btn" class="p-2 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                                <span class="material-symbols-outlined">refresh</span>
                            </button>
                        </div>
                    </div>

                    <div id="empty-inbox" class="text-center py-10 px-4 bg-white dark:bg-gray-800 rounded-xl shadow-lg">
                        <span class="material-symbols-outlined text-5xl text-gray-400">mark_email_unread</span>
                        <p class="mt-2 text-gray-500 dark:text-gray-400">Your inbox is empty â€” Waiting for incoming emails...</p>
                    </div>
                    
                    <div id="inbox-list" class="space-y-3">
                        <!-- Email items will be injected here by JavaScript -->
                    </div>
                </div>
            </main>
            
            <!-- Footer -->
            <footer class="p-4 text-center text-xs text-gray-500 dark:text-gray-400 border-t border-gray-200 dark:border-gray-700">
                &copy; 2025 Mail Generator. Powered by <a href="https://t.me/codelibraryofficial" class="text-orange-500 hover:text-orange-600 transition-colors">Code Library</a>.
            </footer>
        </div>

        <!-- Email Details Screen -->
        <div id="email-screen" class="hidden flex-col h-full">
            <header class="flex items-center p-4 border-b border-gray-200 dark:border-gray-700 sticky top-0 bg-gray-50/80 dark:bg-gray-900/80 backdrop-blur-sm">
                <button id="back-to-inbox-btn" class="p-2 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                    <span class="material-symbols-outlined">arrow_back</span>
                </button>
                <h2 class="text-lg font-bold text-center flex-grow truncate px-4" id="email-subject-header">Email Details</h2>
            </header>

            <main class="p-4 flex-grow overflow-y-auto no-scrollbar space-y-4">
                <div class="flex items-start gap-3">
                    <div id="email-avatar" class="w-10 h-10 rounded-full bg-purple-500 text-white flex items-center justify-center text-xl font-bold flex-shrink-0"></div>
                    <div class="flex-grow">
                        <div class="flex justify-between items-baseline">
                           <p id="email-from" class="font-semibold truncate"></p>
                           <p id="email-timestamp" class="text-xs text-gray-500 dark:text-gray-400 flex-shrink-0 ml-2"></p>
                        </div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">to: <span id="email-to"></span></p>
                    </div>
                </div>
                
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg mt-2 h-[60vh] overflow-hidden">
                     <div id="email-body" class="w-full h-full p-4 overflow-y-auto email-content"></div>
                </div>

                <div class="grid grid-cols-2 gap-3">
                    <button id="reply-btn" class="flex items-center justify-center gap-2 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2.5 px-4 rounded-lg shadow-md transition-all">
                        <span class="material-symbols-outlined">reply</span>
                        <span>Reply</span>
                    </button>
                    <button id="delete-message-btn" class="flex items-center justify-center gap-2 bg-red-500 hover:bg-red-600 text-white font-semibold py-2.5 px-4 rounded-lg shadow-md transition-all">
                        <span class="material-symbols-outlined">delete</span>
                        <span>Delete</span>
                    </button>
                </div>
            </main>
        </div>
    </div>

    <!-- Toast Notifications Container -->
    <div id="toast-container" class="fixed bottom-4 left-1/2 -translate-x-1/2 z-50 space-y-2"></div>
    
    <script type="module">
        // --- STATE MANAGEMENT ---
        const API_BASE = 'https://api.mail.tm';
        let currentAccount = {
            id: null,
            address: null,
            password: null,
            token: null,
        };
        let inboxInterval = null;
        let timerInterval = null;
        let timerSeconds = 600; // 10 minutes
        let currentMessages = [];

        // --- DOM ELEMENTS ---
        const DOMElements = {
            splashScreen: document.getElementById('splash-screen'),
            appContainer: document.getElementById('app-container'),
            homeScreen: document.getElementById('home-screen'),
            emailScreen: document.getElementById('email-screen'),
            emailAddress: document.getElementById('email-address'),
            copyBtn: document.getElementById('copy-btn'),
            timerDisplay: document.getElementById('timer-display'),
            inboxList: document.getElementById('inbox-list'),
            emptyInbox: document.getElementById('empty-inbox'),
            refreshBtn: document.getElementById('refresh-btn'),
            changeMailBtn: document.getElementById('change-mail-btn'),
            deleteMailBtn: document.getElementById('delete-mail-btn'),
            extendTimerBtn: document.getElementById('extend-timer-btn'),
            themeToggleBtn: document.getElementById('theme-toggle-btn'),
            themeIcon: document.getElementById('theme-icon'),
            backToInboxBtn: document.getElementById('back-to-inbox-btn'),
            emailSubjectHeader: document.getElementById('email-subject-header'),
            emailAvatar: document.getElementById('email-avatar'),
            emailFrom: document.getElementById('email-from'),
            emailTo: document.getElementById('email-to'),
            emailTimestamp: document.getElementById('email-timestamp'),
            emailBody: document.getElementById('email-body'),
            deleteMessageBtn: document.getElementById('delete-message-btn'),
            replyBtn: document.getElementById('reply-btn'),
            emailCount: document.getElementById('email-count'),
        };

        // --- API FUNCTIONS ---
        const fetchWithTimeout = async (url, options = {}, timeout = 8000) => {
            const controller = new AbortController();
            const id = setTimeout(() => controller.abort(), timeout);
            try {
                const response = await fetch(url, { ...options, signal: controller.signal });
                clearTimeout(id);
                return response;
            } catch (error) {
                clearTimeout(id);
                throw error;
            }
        };

        const getNewEmail = async (isDelete = false) => {
            showSpinner(DOMElements.changeMailBtn, true);
            showSpinner(DOMElements.deleteMailBtn, true);
            
            if (isDelete && currentAccount.id) {
                try {
                    await fetchWithTimeout(`${API_BASE}/accounts/${currentAccount.id}`, {
                        method: 'DELETE',
                        headers: { 'Authorization': `Bearer ${currentAccount.token}` },
                    });
                } catch (e) { console.error("Failed to delete old account:", e); }
            }
            
            clearInterval(inboxInterval);
            clearInterval(timerInterval);
            
            try {
                const domainResponse = await fetchWithTimeout(`${API_BASE}/domains`);
                if (!domainResponse.ok) throw new Error('Failed to fetch domains');
                const domains = await domainResponse.json();
                const domain = domains['hydra:member'][0].domain;

                const address = `${Math.random().toString(36).substring(7)}@${domain}`;
                const password = Math.random().toString(36).substring(2);

                const accountResponse = await fetchWithTimeout(`${API_BASE}/accounts`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ address, password }),
                });
                if (!accountResponse.ok) throw new Error('Failed to create account');
                const accountData = await accountResponse.json();

                const tokenResponse = await fetchWithTimeout(`${API_BASE}/token`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ address, password }),
                });
                if (!tokenResponse.ok) throw new Error('Failed to get token');
                const tokenData = await tokenResponse.json();
                
                currentAccount = {
                    id: accountData.id,
                    address,
                    password,
                    token: tokenData.token,
                };

                DOMElements.emailAddress.textContent = currentAccount.address;
                showToast("New email generated!", "success");
                extendTimer();
                checkInbox();
                inboxInterval = setInterval(checkInbox, 10000); // 10 seconds auto-refresh
            } catch (error) {
                console.error('Error getting new email:', error);
                showToast("Error creating email. Try again.", "error");
            } finally {
                showSpinner(DOMElements.changeMailBtn, false);
                showSpinner(DOMElements.deleteMailBtn, false);
            }
        };

        const checkInbox = async () => {
            if (!currentAccount.token) return;
            showSpinner(DOMElements.refreshBtn, true);

            try {
                const response = await fetchWithTimeout(`${API_BASE}/messages`, {
                    headers: { 'Authorization': `Bearer ${currentAccount.token}` },
                });

                if (response.status === 401) {
                    showToast("Session expired. Getting a new email.", "warning");
                    await getNewEmail();
                    return;
                }
                if (!response.ok) throw new Error('Failed to fetch inbox');

                const messages = await response.json();
                currentMessages = messages['hydra:member'];
                renderInbox(currentMessages);
            } catch (error) {
                console.error('Error checking inbox:', error);
            } finally {
                showSpinner(DOMElements.refreshBtn, false);
            }
        };

        const openEmail = async (id) => {
            DOMElements.homeScreen.classList.add('hidden');
            DOMElements.emailScreen.classList.remove('hidden');
            DOMElements.emailScreen.classList.add('flex');
            
            try {
                const response = await fetchWithTimeout(`${API_BASE}/messages/${id}`, {
                     headers: { 'Authorization': `Bearer ${currentAccount.token}` },
                });
                if (!response.ok) throw new Error('Failed to fetch message');
                const emailData = await response.json();
                
                DOMElements.emailSubjectHeader.textContent = emailData.subject;
                DOMElements.emailFrom.textContent = emailData.from.name || emailData.from.address;
                DOMElements.emailTo.textContent = currentAccount.address;
                DOMElements.emailTimestamp.textContent = formatDate(new Date(emailData.createdAt));
                DOMElements.emailAvatar.textContent = (emailData.from.name || emailData.from.address)[0].toUpperCase();
                
                // Render HTML content safely
                if (emailData.html && emailData.html.length > 0) {
                    DOMElements.emailBody.innerHTML = emailData.html[0];
                } else {
                    DOMElements.emailBody.innerHTML = `<div class="whitespace-pre-line">${escapeHTML(emailData.text || 'No content')}</div>`;
                }

            } catch(error) {
                 console.error('Error opening email:', error);
                 showToast('Could not load email.', 'error');
                 showHomeScreen();
            }
        };

        // --- UI & HELPER FUNCTIONS ---
        
        const renderInbox = (messages) => {
            DOMElements.inboxList.innerHTML = '';
            DOMElements.emailCount.textContent = `${messages.length} ${messages.length === 1 ? 'email' : 'emails'}`;
            
            if (messages.length === 0) {
                DOMElements.emptyInbox.style.display = 'block';
                DOMElements.inboxList.style.display = 'none';
            } else {
                DOMElements.emptyInbox.style.display = 'none';
                DOMElements.inboxList.style.display = 'block';
                messages.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt));
                messages.forEach(msg => {
                    const emailItem = document.createElement('div');
                    emailItem.className = 'email-item bg-white dark:bg-gray-800 p-3 rounded-xl shadow-lg cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-700 transition-all';
                    emailItem.dataset.id = msg.id;
                    
                    // Add unread indicator
                    const isUnread = !msg.isRead;
                    if (isUnread) {
                        emailItem.classList.add('bg-blue-50', 'dark:bg-blue-900/20');
                    }
                    
                    emailItem.innerHTML = `
                        <div class="flex items-center justify-between">
                            <p class="font-semibold truncate pr-2">${escapeHTML(msg.from.name || msg.from.address)}</p>
                            <p class="text-xs text-gray-500 dark:text-gray-400 flex-shrink-0">${formatDate(new Date(msg.createdAt))}</p>
                        </div>
                        <p class="font-medium truncate mt-1">${escapeHTML(msg.subject)}</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400 truncate mt-1">${escapeHTML(msg.intro)}</p>
                        ${isUnread ? '<div class="w-2 h-2 bg-blue-500 rounded-full mt-2"></div>' : ''}
                    `;
                    DOMElements.inboxList.appendChild(emailItem);
                });
            }
        };

        const showHomeScreen = () => {
            DOMElements.emailScreen.classList.add('hidden');
            DOMElements.emailScreen.classList.remove('flex');
            DOMElements.homeScreen.classList.remove('hidden');
        };

        const copyToClipboard = () => {
            if (!currentAccount.address) return;
            
            // Create a temporary textarea element
            const textArea = document.createElement('textarea');
            textArea.value = currentAccount.address;
            textArea.style.position = 'fixed';
            textArea.style.opacity = '0';
            document.body.appendChild(textArea);
            textArea.select();
            
            try {
                const successful = document.execCommand('copy');
                document.body.removeChild(textArea);
                
                if (successful) {
                    showToast("Email copied to clipboard!", "success");
                    // Add visual feedback
                    DOMElements.copyBtn.innerHTML = '<span class="material-symbols-outlined text-xl">check</span>';
                    setTimeout(() => {
                        DOMElements.copyBtn.innerHTML = '<span class="material-symbols-outlined text-xl">content_copy</span>';
                    }, 2000);
                } else {
                    showToast("Failed to copy email", "error");
                }
            } catch (err) {
                document.body.removeChild(textArea);
                showToast("Failed to copy email", "error");
            }
        };
        
        const startTimer = () => {
            clearInterval(timerInterval);
            timerInterval = setInterval(() => {
                timerSeconds--;
                const minutes = Math.floor(timerSeconds / 60).toString().padStart(2, '0');
                const seconds = (timerSeconds % 60).toString().padStart(2, '0');
                DOMElements.timerDisplay.textContent = `${minutes}:${seconds}`;

                if (timerSeconds <= 0) {
                    clearInterval(timerInterval);
                    DOMElements.timerDisplay.textContent = "Expired";
                    showToast("Timer expired! Extend or get new email.", "warning");
                }
            }, 1000);
        };

        const extendTimer = () => {
            timerSeconds = 600; // Reset to 10 minutes
            DOMElements.timerDisplay.textContent = "10:00";
            startTimer();
            showToast("Timer extended by 10 minutes", "success");
        };

        const showToast = (message, type = 'info') => {
            const toast = document.createElement('div');
            const colors = {
                info: 'bg-gray-700 dark:bg-gray-200 text-white dark:text-black',
                success: 'bg-green-500 text-white',
                warning: 'bg-yellow-500 text-white',
                error: 'bg-red-500 text-white',
            };
            toast.className = `px-4 py-2 rounded-full shadow-lg text-sm font-semibold toast-in ${colors[type]}`;
            toast.textContent = message;
            
            document.getElementById('toast-container').appendChild(toast);

            setTimeout(() => {
                toast.classList.remove('toast-in');
                toast.classList.add('toast-out');
                toast.addEventListener('animationend', () => toast.remove());
            }, 3000);
        };
        
        const escapeHTML = (str) => {
            if (!str) return '';
            const p = document.createElement('p');
            p.textContent = str;
            return p.innerHTML;
        };

        const formatDate = (date) => {
            const seconds = Math.floor((new Date() - date) / 1000);
            let interval = seconds / 31536000;
            if (interval > 1) return `${Math.floor(interval)}y ago`;
            interval = seconds / 2592000;
            if (interval > 1) return `${Math.floor(interval)}mo ago`;
            interval = seconds / 86400;
            if (interval > 1) return `${Math.floor(interval)}d ago`;
            interval = seconds / 3600;
            if (interval > 1) return `${Math.floor(interval)}h ago`;
            interval = seconds / 60;
            if (interval > 1) return `${Math.floor(interval)}m ago`;
            return "Just now";
        };

        const showSpinner = (button, show) => {
            const originalContent = button.dataset.originalContent || button.innerHTML;
            if (show) {
                if (!button.querySelector('.spinner')) {
                    button.dataset.originalContent = button.innerHTML;
                    button.innerHTML = '<span class="spinner"></span>';
                    button.disabled = true;
                }
            } else {
                if (button.dataset.originalContent) {
                    button.innerHTML = button.dataset.originalContent;
                }
                button.disabled = false;
            }
        };

        // --- THEME MANAGEMENT ---
        const applyTheme = (theme) => {
            if (theme === 'dark') {
                document.documentElement.classList.add('dark');
                DOMElements.themeIcon.textContent = 'light_mode';
            } else {
                document.documentElement.classList.remove('dark');
                DOMElements.themeIcon.textContent = 'dark_mode';
            }
        };

        const toggleTheme = () => {
            const currentTheme = localStorage.getItem('theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            localStorage.setItem('theme', newTheme);
            applyTheme(newTheme);
        };

        // --- INITIALIZATION ---
        const initApp = async () => {
            // Setup theme
            const savedTheme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            applyTheme(savedTheme);

            // Splash screen logic
            setTimeout(() => {
                DOMElements.splashScreen.style.opacity = '0';
                DOMElements.appContainer.style.opacity = '1';
                DOMElements.splashScreen.addEventListener('transitionend', () => DOMElements.splashScreen.style.display = 'none');
            }, 2200);

            // Initial email generation
            await getNewEmail();

            // Setup event listeners
            DOMElements.copyBtn.addEventListener('click', copyToClipboard);
            DOMElements.changeMailBtn.addEventListener('click', () => getNewEmail(false));
            DOMElements.deleteMailBtn.addEventListener('click', () => getNewEmail(true));
            DOMElements.refreshBtn.addEventListener('click', checkInbox);
            DOMElements.extendTimerBtn.addEventListener('click', extendTimer);
            DOMElements.themeToggleBtn.addEventListener('click', toggleTheme);
            DOMElements.backToInboxBtn.addEventListener('click', showHomeScreen);
            DOMElements.inboxList.addEventListener('click', (e) => {
                const emailItem = e.target.closest('[data-id]');
                if (emailItem) {
                    openEmail(emailItem.dataset.id);
                }
            });
            
            // "Delete Message" is simulated locally by just going back to the inbox.
            DOMElements.deleteMessageBtn.addEventListener('click', () => {
                showToast("Message deleted locally.", "info");
                showHomeScreen();
            });
            
            // Reply button functionality
            DOMElements.replyBtn.addEventListener('click', () => {
                showToast("Reply functionality would open in a real app", "info");
            });
        };

        document.addEventListener('DOMContentLoaded', initApp);
    </script>
</body>
</html>
